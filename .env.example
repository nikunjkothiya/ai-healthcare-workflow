# Database
DB_HOST=postgres
DB_USER=postgres
DB_PASS=postgres
DB_NAME=healthcare
DB_PORT=5432

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# JWT
JWT_SECRET=supersecret_change_in_production

# AI Services
OLLAMA_URL=http://host.docker.internal:11434
LLM_MODEL=qwen2.5:3b-instruct-q4_K_M
LLM_MODEL_CHAT=qwen2.5:3b-instruct-q4_K_M
LLM_MODEL_ANALYSIS=qwen2.5:7b-instruct-q4_K_M
LLM_MODEL_DECISION=qwen2.5:3b-instruct-q4_K_M
LLM_MAX_TOKENS=200
LLM_NUM_CTX=1536
LLM_NUM_CTX_REALTIME=1536
LLM_MAX_TOKENS_ANALYSIS=768
LLM_NUM_CTX_ANALYSIS=8192
LLM_AUTO_PULL_MODELS=true
LLM_TIMEOUT_MS=45000

# STT (Whisper)
WHISPER_HOST=whisper
WHISPER_PORT=9000
WHISPER_MODEL_PATH=/models/ggml-small.en.bin
STT_CHUNK_MS=2500
STT_SILENCE_MS=800

# TTS (Coqui)
TTS_HOST=tts
TTS_PORT=5002
REQUIRE_SERVER_TTS=true
VITE_REQUIRE_SERVER_TTS=true

# Worker / Orchestrator
WORKER_CONCURRENCY=1
AUDIO_TMP_DIR=/tmp/healthcare_audio
MAX_CALL_DURATION_MS=600000
MAX_CONVERSATION_TURNS=30
MAX_RUNTIME_RAM_GB=14

# App
NODE_ENV=production
